<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instagram Clone</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .stories-container::-webkit-scrollbar {
      height: 6px;
    }

    .stories-container::-webkit-scrollbar-track {
      background: #1f1f1f;
    }

    .stories-container::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 3px;
    }

    .stories-container::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
  </style>
</head>

<body class="bg-black text-white">
  <div class="flex flex-col md:flex-row">
    <!-- Left Sidebar -->
    <nav class="w-full md:w-1/5 md:fixed md:h-screen bg-zinc-900 p-4 md:p-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-6 md:mb-10">Instagram</h1>
      <ul class="flex md:block space-x-4 md:space-x-0 md:space-y-4 overflow-x-auto md:overflow-x-visible whitespace-nowrap md:whitespace-normal">
        <li><a href="/home" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
          <span class="hidden md:inline">Home</span>
        </a></li>
        <li><a href="/search" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <span class="hidden md:inline">Search</span>
        </a></li>
        <li><a href="/message" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path></svg>
          <span class="hidden md:inline">Messages</span>
        </a></li>
        <li><a href="/post" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span class="hidden md:inline">Create</span>
        </a></li>
        <li><a href="/profile" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          <span class="hidden md:inline">Profile</span>
        </a></li>
      </ul>
      <a href="/logout" class="hidden md:flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-3 transition duration-300 mt-10">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
        <span>Logout</span>
      </a>
    </nav>

    <!-- Main Content -->
    <main class="w-full md:w-1/2 md:ml-[20%] p-4 md:p-6">
      <!-- Stories -->
      <section class="stories-container overflow-x-auto whitespace-nowrap py-4 px-2 mb-6">
        <div class="flex space-x-4">
          <% for(let i = 1; i <= 10; i++) { %>
          <div class="story-item flex flex-col items-center">
            <div class="w-14 h-14 md:w-16 md:h-16 rounded-full overflow-hidden ring-2 ring-pink-500 p-[2px]">
              <img src="https://picsum.photos/150/150?random=<%= i %>" alt="Story <%= i %>" class="w-full h-full object-cover rounded-full">
            </div>
            <span class="text-xs mt-1">User <%= i %></span>
          </div>
          <% } %>
        </div>
      </section>

      <!-- Posts -->
      <section class="posts-container space-y-6">
        <% for(let i = 1; i <= 5; i++) { %>
        <article class="post bg-zinc-900 rounded-lg overflow-hidden shadow-lg">
          <header class="post-header flex items-center p-4">
            <img src="https://picsum.photos/50/50?random=<%= i + 10 %>" alt="User Avatar" class="w-8 h-8 rounded-full mr-3">
            <span class="font-semibold">User <%= i %></span>
          </header>
          <div class="post-image">
            <img src="https://picsum.photos/600/600?random=<%= i + 15 %>" alt="Post Image" class="w-full h-auto">
          </div>
          <div class="post-actions flex justify-between p-4">
            <div class="left flex space-x-4">
              <button class="text-2xl">‚ù§Ô∏è</button>
              <button class="text-2xl">üí¨</button>
              <button class="text-2xl">üì§</button>
            </div>
            <button class="text-2xl">üîñ</button>
          </div>
          <div class="post-likes px-4 pb-2 font-semibold">
            <%= Math.floor(Math.random() * 1000) + 1 %> likes
          </div>
          <div class="post-caption px-4 pb-4">
            <span class="font-semibold mr-2">User <%= i %></span>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. #instagram #post
          </div>
          <div class="post-comments px-4 pb-4 text-gray-400">
            View all <%= Math.floor(Math.random() * 50) + 1 %> comments
          </div>
        </article>
        <% } %>
      </section>
    </main>

    <!-- Right Sidebar -->
    <aside class="w-full md:w-[30%] p-4 md:p-6 bg-zinc-900 mt-6 md:mt-0">
      <div class="flex items-center mb-6">
        <img src="https://picsum.photos/50/50?random=1" alt="Your Avatar" class="w-12 h-12 rounded-full mr-4">
        <div>
          <h2 class="font-semibold">Your Username</h2>
          <p class="text-gray-400 text-sm">Your Full Name</p>
        </div>
      </div>
      <div class="mb-6">
        <h3 class="text-gray-400 font-semibold mb-4">Suggestions For You</h3>
        <ul class="space-y-4">
          <% for(let i = 1; i <= 5; i++) { %>
          <li class="flex items-center justify-between">
            <div class="flex items-center">
              <img src="https://picsum.photos/50/50?random=<%= i + 20 %>" alt="Suggested User <%= i %>" class="w-8 h-8 rounded-full mr-3">
              <div>
                <p class="font-semibold text-sm">Suggested User <%= i %></p>
                <p class="text-gray-400 text-xs">Followed by user<%= i + 1 %></p>
              </div>
            </div>
            <button class="text-blue-500 text-sm font-semibold">Follow</button>
          </li>
          <% } %>
        </ul>
      </div>
      <footer class="text-gray-400 text-xs">
        <p>¬© 2023 INSTAGRAM CLONE</p>
        <p class="mt-2">This is a clone for educational purposes only.</p>
      </footer>
    </aside>
  </div>
</body>

</html>