<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instagram Clone - Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white">
  <div class="flex flex-col md:flex-row">
    <!-- Left Sidebar -->
    <nav class="w-full md:w-1/5 md:fixed md:h-screen bg-zinc-900 p-4 md:p-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-6 md:mb-10">Instagram</h1>
      <ul class="flex md:block space-x-4 md:space-x-0 md:space-y-4 overflow-x-auto md:overflow-x-visible whitespace-nowrap md:whitespace-normal">
        <li><a href="/home" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span class="hidden md:inline">Home</span>
          </a></li>
        <li><a href="/search" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <span class="hidden md:inline">Search</span>
          </a></li>
        <li><a href="/message" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
            <span class="hidden md:inline">Messages</span>
          </a></li>
        <li><a href="/post" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="hidden md:inline">Create</span>
          </a></li>
        <li><a href="/profile" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="hidden md:inline">Profile</span>
          </a></li>
      </ul>
      <a href="/logout" class="hidden md:flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-3 transition duration-300 mt-10">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Logout</span>
      </a>
    </nav>

    <!-- Main Content - Profile -->
    <main class="w-full md:w-4/5 md:ml-[20%] p-4 md:p-6">
      <div class="max-w-4xl mx-auto">
        <!-- Profile Header -->
        <div class="flex flex-col md:flex-row items-center md:items-start mb-8">
          <img src="https://picsum.photos/150/150" alt="Profile Picture" class="w-32 h-32 rounded-full mb-4 md:mb-0 md:mr-8">
          <div>
            <h1 class="text-2xl font-semibold mb-2"><%= user.username %></h1>
            <div class="flex space-x-4 mb-4">
              <span><strong>100</strong> newPost</span>
              <span><strong>1,234</strong> Followers</span>
              <span><strong>567</strong> Following</span>
            </div>
            <p class="font-semibold"><%= user.fullname %></p>
            <a href="#" class="text-blue-500">www.website.com</a>
          </div>
        </div>

        <!-- Profile Tabs -->
        <div class="border-t border-gray-700">
          <ul class="flex justify-center space-x-12 py-4">
            <li class="uppercase font-semibold text-sm tracking-wider">newPost</li>
            <li class="uppercase font-semibold text-sm tracking-wider text-gray-500">Saved</li>
            <li class="uppercase font-semibold text-sm tracking-wider text-gray-500">Tagged</li>
          </ul>
        </div>

        <!-- Photo Grid -->
        <div class="grid grid-cols-3 gap-1 md:gap-4">
          <% if (typeof newPost !== 'undefined' && newPost.length > 0) { %>
            <% newPost.forEach(newPost => { %>
              <div class="aspect-square">
                <img src="data:image/jpeg;base64,<%= newPost.image.toString('base64') %>" class="w-full h-full object-cover">
              </div>
            <% }); %>
          <% } else { %>
            <p>No newPost available.</p>
          <% } %>
        </div>
      </div>
    </main>
  </div>
</body>

</html>
