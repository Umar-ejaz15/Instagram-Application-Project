<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instagram Clone</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .stories-container::-webkit-scrollbar {
      height: 6px;
    }

    .stories-container::-webkit-scrollbar-track {
      background: #1f1f1f;
    }

    .stories-container::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 3px;
    }

    .stories-container::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
  </style>
</head>

<body class="bg-black text-white">
  <div class="flex flex-col md:flex-row">
    <!-- Left Sidebar -->
    <nav class="w-full md:w-1/5 md:fixed md:h-screen bg-zinc-900 p-4 md:p-6">
      <h1 class="text-2xl md:text-3xl font-bold mb-6 md:mb-10">Instagram</h1>
      <ul class="flex md:block space-x-4 md:space-x-0 md:space-y-4 overflow-x-auto md:overflow-x-visible whitespace-nowrap md:whitespace-normal">
        <li><a href="/home" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span class="hidden md:inline">Home</span>
          </a></li>
        <li><a href="/search" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <span class="hidden md:inline">Search</span>
          </a></li>
        <li><a href="/message" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
            <span class="hidden md:inline">Messages</span>
          </a></li>
        <li><a href="/post" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="hidden md:inline">Create</span>
          </a></li>
        <li><a href="/profile" class="flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-2 md:p-3 transition duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="hidden md:inline">Profile</span>
          </a></li>
      </ul>
      <a href="/logout" class="hidden md:flex items-center space-x-3 hover:bg-zinc-800 rounded-md p-3 transition duration-300 mt-10">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Logout</span>
      </a>
    </nav>

    <!-- Main Content -->
    <main class="w-full md:w-3/4 md:ml-[20%] p-4 md:p-6">
      <h2 class="text-2xl font-bold mb-6">Create a New Post</h2>
      <form action="/post" method="post" enctype="multipart/form-data" class="bg-zinc-900 rounded-lg p-6">
        <div class="mb-4">
          <label for="caption" class="block text-sm font-medium mb-2">Caption</label>
          <input type="text" id="caption" name="caption" class="w-full px-3 py-2 bg-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div class="mb-4">
          <label for="post-file" class="block text-sm font-medium mb-2">Upload File</label>
          <input type="file" id="post-file" name="image" accept="image/*" class="w-full px-3 py-2 bg-zinc-800 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>
        <div class="mb-4">
          <label class="block text-sm font-medium mb-2">Preview</label>
          <div id="preview-area" class="w-full h-64 bg-zinc-800 rounded-md flex items-center justify-center">
            <p class="text-zinc-500">No file selected</p>
          </div>
        </div>
        <button type="submit" class="bg-blue-500 w-full text-center text-2xl rounded-lg py-2">Submit</button>
      </form>
    </main>
  </div>

  <script>
    const postFile = document.getElementById('post-file');
    const previewArea = document.getElementById('preview-area');

    postFile.addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          previewArea.innerHTML = '';
          const img = document.createElement('img');
          img.src = e.target.result;
          img.className = 'max-w-full max-h-full object-contain';
          previewArea.appendChild(img);
        }
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>

</html>